<%- include("partials/navbar") %>


<link rel="stylesheet" href="/blog-form.css" />
  <body>
    <main class="form-container">
      <h2>Edit Post <%= blog.id %></h2>

      <!-- Blog Post Submission Form -->
      <form action="/edited-post/<%= blog.id %>" method="POST" class="new-post-form">
        <!-- Post Title -->
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="<%= blog.title %>"/>

        <!-- Post Subtitle -->
        <label for="subtitle">Subtitle</label>
        <input type="text" id="subtitle" name="subtitle" placeholder="<%= blog.subtitle %>"/>

        <!-- Post Author -->
        <label for="author">Author</label>
        <input type="text" id="author" name="author" placeholder="<%= blog.author %>"/>

        <!-- Post Content -->
        <label for="content">Content</label>
        <textarea id="content" name="content" rows="6" placeholder="<%= blog.content %>"></textarea>

        <!-- Submit Button -->
        <input type="submit" value="Submit Edited Post" />
      </form>
    </main>
  </body>
</html>
